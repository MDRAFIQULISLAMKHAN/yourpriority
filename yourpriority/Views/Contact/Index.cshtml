                                <div class="mb60  section-title text-center  ">
                                    <!-- section title start-->
                                    <h1>Get In Touch</h1>

                                </div>
                            </div>

                            @using (Html.BeginForm("MaiResult", "Contact", FormMethod.Post, new { @class = "contactForm" }))
                                                                        {
                                                                            <div class="row">
                                                                                <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 col-12">
                                                                                    <div class="form-group">
                                                                                        @Html.TextBoxFor(model => Model.Name, new { @class = "form-control input-md", @id = "name", placeholder = "Name", data_rule = "minlen:4", data_msg = "Please enter at least 4 chars" })
                                                                                    </div>
                                                                                </div>

                                                                                <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 col-12">
                                                                                    <div class="span4 form-group">
                                                                                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control input-md", @id = "email", placeholder = "Email", data_rule = "email", data_msg = "Please enter a valid email" })
                                                                                    </div>
                                                                                </div>
                                                                                <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 col-12">
                                                                                    <div class="span4 form-group">
                                                                                        @Html.TextBoxFor(model => model.Phone, new { @class = "form-control input-md", @id = "email", placeholder = "Phone", data_rule = "email", data_msg = "Please enter a valid email" })
                                                                                    </div>
                                                                                </div>
                                                                                <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 col-12">
                                                                                    <div class="span4 form-group">
                                                                                        @Html.TextBoxFor(model => model.Regarding, new { @class = "form-control form-control-lg", @id = "email", placeholder = "Regarding", data_rule = "email", data_msg = "Please enter a valid email" })
                                                                                    </div>
                                                                                </div>
                                                                                <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 col-12">
                                                                                    <div class="span4 form-group">
                                                                                        @Html.TextBoxFor(model => model.Office, new { @class = "form-control form-control-lg", @id = "email", placeholder = "Your Closest Office", data_rule = "email", data_msg = "Please enter a valid email" })
                                                                                    </div>
                                                                                </div>
                                                                                <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 col-12">
                                                                                    <div class="span4 form-group">
                                                                                        @Html.TextBoxFor(model => model.Refference, new { @class = "form-control form-control-lg", @id = "email", placeholder = "How did you hear of us?", data_rule = "email", data_msg = "Please enter a valid email" })
                                                                                    </div>
                                                                                </div>
                                                                                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                                                                    <div class="form-group">
                                                                                        @Html.TextAreaFor(model => model.Refference, new { @class = "form-control form-control-lg", @id = "email", placeholder = "Message", data_rule = "email", data_msg = "Please enter Message" })
                                                                                    </div>
                                                                                </div>
